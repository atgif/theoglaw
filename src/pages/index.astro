---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="homepage">
    <div class="top-bar">
      <div class="logo-area">
        <img src="/logo.png" alt="The OG Law Logo" class="logo" />
        <div class="intro-text">
          <h1 class="tagline">Legal Compass for Your Business Growth</h1>
          <p class="intro">
            Welcome to The OG Law, your trusted partner in business and transactional legal matters.
            We specialize in entity formation, compliance, contracts, cross-border M&A, and trademarks.
          </p>
        </div>
      </div>

      <nav class="nav-menu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/payment" class="cta">Pay & Book</a></li>
        </ul>
      </nav>
    </div>

    <hr class="divider" />

    <img src="/portrait.png" alt="Olena Gannochchenko" class="portrait" />
  </section>
</BaseLayout>
